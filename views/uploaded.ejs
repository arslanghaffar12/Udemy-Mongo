<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* You can keep your existing styles here */

        /* Additional Bootstrap class to adjust spacing */
        .image-grid {
            margin-top: 20px;
        }
    </style>
    <title>Image Grid</title>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>This is Learning</h1>
            <div>
                <a class="btn btn-primary me-2" href="/add-employee">Add New</a>
                <a class="btn btn-primary me-2" href="/search">Search</a>
                <a class="btn btn-primary me-2" href="/file-upload">File Uploads</a>
            </div>
        </div>
        
        <div class="row image-grid">
            <% images.forEach((image, index) => { %>
            <div class="col-6 col-md-4 col-lg-3 mb-4"> <!-- Adjust columns based on your preference -->
                <div class="image-item">
                    <img src="<%= image.imageUrl %>" alt="Image" class="img-fluid">
                    <form action="/delete-picture" method="POST">
                        <input  value="<%=image.id %>" hidden>
                        <button class="btn btn-danger delete-button" type="submit">Delete</button>
                    </form>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <!-- Include Bootstrap JS and Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
